{
    "manifest_version": 3,
    "name": "Covid Report of UK",
    "version": "1.0",
    "description": "Get real-time COVID-19 updates for the UK.",
    "permissions": ["storage", "alarms"],
    "host_permissions": ["https://api.coronavirus.data.gov.uk/*"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  